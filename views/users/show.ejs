<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>
<body class="matt">

<ul class="nav">
  <li class="nav-item">
    <a class="nav-link active" href="/auth/login">Home</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/recipes">Recipes</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/users">Contributors</a>
  </li>
</ul>


    <h2>Recipes by <%=userOnTheTemplate.username%></h2><br/>
        <div class="mattidedit">
        <%if(logged === true && userOnTheTemplate._id.toString() === sessionId.toString()){%>
            <a href = "/users/<%=userOnTheTemplate._id%>/edit">Edit User Info</a>
            <form action = "/users/<%=userOnTheTemplate._id%>?_method=DELETE" method = "POST">
                <button type = "submit">Delete User</button>
            </form>
        <%}%>
        </div>
    <div class="flex-container">
        <%userOnTheTemplate.recipes.forEach((recipes) => {%>
        <div class="card" style="width: 25rem;">
            <img src="<%=recipes.img%>" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title"><%= recipes.title %></h5>
                <p class="card-text"><%= recipes.body %></p>
                <a href="/recipes/<%=recipes._id%>" class="btn btn-primary">View Recipe</a>
            </div>
        </div>
    <%})%>
    </div>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>

